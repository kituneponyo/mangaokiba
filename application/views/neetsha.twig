{% extends "template.twig" %}

{% block head %}
    <meta name="robots" content="noindex">
{% endblock %}

{% block body_class %}center{% endblock %}

{% block content %}

    <p>
        <a href="/edit/create">作品登録</a>
    </p>

    <hr>

    <h2>新都社連携作品一覧</h2>

    {% if comics %}
        {% for comic in comics %}
            <p><a href="/comic/{{ comic.id }}">{{ comic.title }}</a> / {{ comic.author }}</p>
        {% endfor %}
    {% endif %}

{% endblock %}
